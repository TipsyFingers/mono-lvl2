@model IEnumerable<mono_lvl2.Service.ViewModels.VehicleModelViewModel>

@{
    ViewBag.Title = "Index";
    SelectList makes = ViewBag.List;
    var test = ViewBag.Test;
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by maker name: @Html.TextBox("searchStr")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name ", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Abrv ", "Index", new { sortOrder = ViewBag.AbrvSortParm })
        </th>
        <th>
            @Html.ActionLink("Maker ", "Index", new { sortOrder = ViewBag.MakeSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Abrv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Make.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
